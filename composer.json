        "monolog/monolog": "^2.0",
        "league/container": "^3.3",
        "league/oauth2-client":  "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {

        "psr-4": {
